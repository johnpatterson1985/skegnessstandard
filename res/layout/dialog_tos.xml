<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_ishf1"
        android:orientation="vertical"
        android:paddingTop="0.5dp"
        tools:ignore="HardcodedText" >




        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="18sp"
        	android:textColor="@color/holo_blue"
            android:text="@string/app_tos_header"/>


        <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:padding="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/dotted_line_draw"/>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="14sp"
        	android:textColor="@color/holo_gray222222"
            android:text="@string/app_tos_content1"/>
        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/card_border"
            android:drawableLeft="@drawable/url_link_img"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_margin="15dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="12sp"
        	android:textColor="@color/holo_gray222222"
            android:text="@string/app_tos_advertise_url"
            android:autoLink="all"/>



        <ProgressBar android:id="@+id/progressbar"
                     style="?android:attr/progressBarStyleHorizontal"
                     android:layout_width="fill_parent"
                     android:layout_height="8px"
                     android:max="100"
                     android:visibility="gone" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:padding="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/dotted_line_draw"/>
        <ImageView
            android:id="@+id/imageView1"
            android:background="@drawable/transparent"
            android:src="@drawable/ic_launcher"
            android:paddingTop="30dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:ignore="Contentdescription" />
        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:fontFamily="sans-serif-condensed"
            android:textSize="8sp"
        	android:textColor="@color/holo_gray222222"
            android:text="@string/versionName"/>
        
        

        
    </LinearLayout>

</ScrollView>